{
  "name": "near.monorepo",
  "version": "1.0.0",
  "description": "Near Contract and React Monorepo",
  "private": true,
  "scripts": {
    "postinstall": "yarn husky install",
    "back": "yarn workspace @near/back",
    "front": "yarn workspace @near/front",
    "contracts": "yarn workspace @near/contracts",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .prettierignore --fix .eslintrc.js packages/front --ignore-pattern '!.eslintrc.js'",
    "format:check": "prettier --ignore-path .prettierignore packages/** --check"
  },
  "engines": {
    "yarn": ">=1.22.0 <2.0.0",
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.rs": [
      "sh ./format_rust.sh"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/tailwindcss",
      "**/tailwindcss/**",
      "**/postcss",
      "**/postcss/**",
      "**/autoprefixer",
      "**/autoprefixer/**"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.42.1",
    "cypress": "^10.6.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2"
  }
}
